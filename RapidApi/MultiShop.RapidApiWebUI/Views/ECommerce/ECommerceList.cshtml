<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #f4f0ff; /* pastel lila arka plan */
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #e0d6ff; /* hafif lila çizgi */
    }

    th {
        background-color: #d9ccff; /* pastel lila başlık */
        color: #4b0082; /* koyu mor metin */
    }

    tr:hover {
        background-color: #e6e0ff; /* hover pastel ton */
    }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: contain;
        border-radius: 6px;
    }

    .star {
        color: #b399ff; /* pastel lila yıldız */
    }

    .product-link {
        text-decoration: none;
        background-color: #b399ff; /* pastel lila buton */
        color: white;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 0.9rem;
        transition: all 0.2s ease-in-out;
    }

        .product-link:hover {
            background-color: #9a80ff; /* hover lila */
            transform: translateY(-2px);
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Görsel</th>
                <th>Ürün Adı</th>
                <th>Yıldız</th>
                <th>Yorum</th>
                <th>Fiyat</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Length; i++)
            {
                var item = Model[i];
                var rating = item.product_rating != null ? Math.Round((double)item.product_rating) : 0;
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        <img src="@(item.product_photos != null && item.product_photos.Length > 0 ? item.product_photos[0] : "/img/no-image.png")" class="product-img" />
                    </td>
                    <td>@item.product_title</td>
                    <td>
                        @for (int j = 1; j <= 5; j++)
                        {
                            if (j <= rating)
                            {
                                <i class="bi bi-star-fill star"></i>
                            }
                            else
                            {
                                <i class="bi bi-star star"></i>
                            }
                        }
                    </td>
                    <td>@(item.product_num_reviews ?? 0)</td>
                    <td>@(item.offer?.price ?? "Fiyat Bilgisi Yok")</td>
                    <td>
                        <a href="@item.product_page_url" target="_blank" class="product-link">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

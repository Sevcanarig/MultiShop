@model List<MultiShop.DtoLayer.Dtos.CatalogDtos.ProductDtos.ResultProductDto>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-6 pb-4 d-flex">
            <div class="product-item bg-light w-100 d-flex flex-column">
                <div class="product-img position-relative overflow-hidden" style="height: 250px;">
                    <img class="img-fluid w-100 h-100"
                         style="object-fit: contain; background-color: #f8f9fa;"
                         src="@item.ProductImageUrl"
                         alt="@item.ProductName">
                    <div class="product-action">
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-shopping-cart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-sync-alt"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="text-center py-3 flex-fill d-flex flex-column justify-content-between">
                    <a class="h6 text-decoration-none text-truncate mb-2" href="#">@item.ProductName</a>
                    <div class="d-flex align-items-center justify-content-center mt-auto">
                        <h5 class="mb-0">@item.ProductPrice ₺</h5>
                        <!-- Eski fiyat yoksa burası tamamen kaldırıldı -->
                    </div>
                </div>
            </div>
        </div>
    }
</div>
